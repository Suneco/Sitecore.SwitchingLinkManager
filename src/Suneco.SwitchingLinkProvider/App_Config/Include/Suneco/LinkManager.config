<?xml version="1.0"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <suneco.switchinglinkprovider>
      <!-- Enables logging for this module-->
      <logDebugInfo>true</logDebugInfo>
    </suneco.switchinglinkprovider>
    <settings>     
      <setting name="SwitchingLinkProvider.Debug" value="true"/>
    </settings>
    <linkManager>
      <patch:attribute name="defaultProvider">switcher</patch:attribute>
      <providers>
        <add name="default" type="Sitecore.Links.LinkProvider, Sitecore.Kernel"
            addAspxExtension="false"
            alwaysIncludeServerUrl="false"
            encodeNames="true"
            languageEmbedding="always"
            languageLocation="filePath"
            lowercaseUrls="false"
            shortenUrls="true"
            useDisplayName="false" />
        <add name="switcher" type="Suneco.SwitchingLinkProvider.SwitchingLinkProvider, Suneco.SwitchingLinkProvider" mappings="switchingProviders/linkmanager" />
      </providers>
    </linkManager>
    <switchingProviders>
      <linkmanager>
        <provider providerName="default" sitename="*" />
      </linkmanager>
    </switchingProviders>
  </sitecore>
</configuration>